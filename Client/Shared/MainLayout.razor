@using Endava.TechCourse.BankApp.Client.Pages.Admin
@using Endava.TechCourse.BankApp.Client.Pages.User
@inherits LayoutComponentBase
@inject AuthService authService

<MudThemeProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <h2>Endava TechCourse Bank App |</h2>
        <MudButton Href="/" Variant="Variant.Text" Style=@($"color:{Theme.PaletteDark.White}") Class="ml-4">Pagina Principala</MudButton>
        <MudButton Href="/wallets" Variant="Variant.Text" Style=@($"color:{Theme.PaletteDark.White}") Class="ml-4">Wallets</MudButton>
        <MudButton Href="/currencies" Variant="Variant.Text" Style=@($"color:{Theme.PaletteDark.White}") Class="ml-4">Currencies</MudButton>
        <MudSpacer/>
        <MudButton Href="/" OnClick="Logout" Variant="Variant.Filled" DisableElevation="true" Color="Color.Secondary" Class="mr-4">Logout</MudButton>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">

        <AuthorizeView Roles="User">
            <UserNavMenu/>
        </AuthorizeView>

        <AuthorizeView Roles="Admin">
            <AdminNavMenu />
        </AuthorizeView>
        
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="my-8">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>


@code {
    bool _drawerOpen = true;
    private MudTheme Theme = new MudTheme();

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private async Task Logout() => await authService.Logout();
}